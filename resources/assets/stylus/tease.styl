
.tease{
    color: #9fa0a3;
    margin-bottom: 4.5rem;
    & .fa{
        color: #4E505D;
    }
}
.tag-list{
    margin: 0px;
    padding: 0px;
    list-style: none;
    display: inline-block;
    & > li{
        display: inline-block;
    }
}

.tease-title{
    border-bottom: 3px solid #f4f4f4;
    padding-bottom: .5rem;
    color:#3b3b42;
}

.tease-link{
    color:#3b3b42;
    transition: color 500ms ease;
}

.read-more{
    display: block;
    text-align: center;
    padding: 0.65em 1.75em;
    font-weight: 700;
    font-size: 0.867em;
    text-transform: uppercase;
	background-color: #ff6a48
	color: #fff;
	text-decoration: none;
    max-width: 10em;
    margin-top: 1.5rem;
	&:hover{
        color: #fff;
	    text-decoration: none;
        background: #ff9279;
	}
}

