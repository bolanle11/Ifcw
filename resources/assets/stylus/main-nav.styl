.main-nav{
	padding: 20px;

	&__wrap{
		display:flex;
		flex-flow: row wrap;
		justify-content:center;
		align-items:center;
		position: relative;
	}

	&__icon{
		color: white;
		font-size: 1.5em;
		display: none;
	}

	&__small{
		display: none;
	}

	& > .container{
		display:flex;
		flex-flow: row wrap;
		justify-content:center;
		align-items:center;
		//background:#3D3E49;

	}
	&  h1{
		display:inline-block;
		margin:0px;
		font-size:.9rem;
		max-width:100%;
		//padding: 0 10px;
	}

	& a{
		display:block;
		color:#eee;
		text-decoration:none;
		transition:all 500ms ease;
		max-width:100%;
		font-family: 'Raleway', sans-serif;
		text-align: center;
		text-transform: uppercase;
		border: 2px solid transparent;
		padding: 2px 15px;
		&:hover{
			border-color:whitesmoke;
			color: #DDDDDD;
		}

	}
}

.current-menu-item > a{
	border-color:whitesmoke;
   color: #DDDDDD;
}

img{
	max-width: 100%;
}
.menu-item-has-children{
	position: relative;
	z-index: 999;
	&:hover > .child-nav{
		visibility: visible;
	    opacity: 1;
	    z-index: 99999;
		transform: translate(0,0);
	}
}




.child-nav{
	top:100%;/* Uncommenting this makes the dropdowns work in IE7 but looks a little worse in all other browsers. Your call. */
	position: absolute;
    width: 270px;
    left: -50%;
    top: 100%;
    z-index: -100000000000;
    visibility: hidden;
    opacity: 0;
	background: #FF6A48;
	transform: translate(0,20px);
	transition: all .5s cubic-bezier(.215,.61,.355,1);
	border-top: #32536c 3px solid;
	box-shadow: 0px 5px 5px rgba(59, 43, 43, 0.4);
	padding: 10px;
	& h1{
		display: block;
		font-size: 14px;
		margin: 0px;
		text-align:center;z-index: 9999;
		position: relative;
		& a{
			color:white;z-index: 9999;
			font-weight: 700;
			position: relative;
			padding: 10px 0px;
			text-transform: capitalize;
		}
	}
}


.stuck {
  position:fixed;
  left:0;
  top: 0;
  width: 100%;
  z-index: 9999999;
  animation:pulse 1s forwards;
  transform: translate(0,-50px) ;
  opacity: 0;
  padding: 1px;

  background:#4E505D;box-shadow: -4px 3px 0 0 rgba(0,0,0,.2);
  & .logo--nav{
	  display: block;
  }
}

@keyframes pulse {

  100% {
	opacity: 1;
	transform: translate(0,0);
  }
}

@media all and (max-width:64.75em) {
	.main-nav{
		&  h1{
			font-size: .8rem;
			padding: 0 1px;
		}
	}
}

@media all and (max-width:960px) {
	.logo{
		display: none;
	}

	.main-header{
	    .home &{
			position: relative;
			background:#4E505D;
		}
	}
	.main-nav{
		padding: 0px;
		.stuck{
			position: static;
		}

		& .logo--nav{
	  	  display: block;
	    }

		&__wrap{
			display: none;
		}

		&__icon{
			display: block;
			cursor: pointer;
		}

		&__small{
			display: none;
			background:#3D3E49;
			&.menu_active{
				display: block;
			}
			max-width: 500px;
    		position: absolute;
			right: 0px;
			top:calc(100% + 10px);
			& h1{
				display: block;
				text-align: left;
				& > .child-nav{
					position: relative;
					visibility: visible;
				    opacity: 1;
				    z-index: 99999;
					transform: translate(0,0);
					left:0px;
				}
				& a{
					text-align: left;
					border: 0px;
					padding: 5px;
				}
			}
		}

	}
}
